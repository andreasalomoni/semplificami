<%- model_class = Practice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:practice_type) %></th>
      <th><%= model_class.human_attribute_name(:presentation_date) %></th>
      <th><%= model_class.human_attribute_name(:sentence_id) %></th>
      <th><%= model_class.human_attribute_name(:actor_id) %></th>
      <th><%= model_class.human_attribute_name(:defendant_id) %></th>
      <th><%= model_class.human_attribute_name(:magistrate_id) %></th>
      <th><%= model_class.human_attribute_name(:marriage_act_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @practices.each do |practice| %>
      <tr>
        <td><%= link_to practice.id, practice_path(practice) %></td>
        <td><%= practice.practice_type %></td>
        <td><%= practice.presentation_date %></td>
        <td><%= practice.sentence_id %></td>
        <td><%= practice.actor_id %></td>
        <td><%= practice.defendant_id %></td>
        <td><%= practice.magistrate_id %></td>
        <td><%= practice.marriage_act_id %></td>
        <td><%=l practice.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_practice_path(practice), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      practice_path(practice),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_practice_path,
            :class => 'btn btn-primary' %>
