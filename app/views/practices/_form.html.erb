<%= simple_form_for @practice, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :practice_type %>
  <%= f.input :presentation_date, as: :date_picker %>

    <%= div_for @practice.sentence do %>
        <h2>Sentenza</h2>
        <%= f.simple_fields_for :sentence do |s| %>
            <%= s.input :number %>
            <%= s.input :year %>
            <%= s.input :sentence_date, as: :date_picker %>
            <%= s.input :publication_date, as: :date_picker %>
            <%= s.input :role_number %>
            <%= s.input :role_year %>
        <% end %>
    <% end %>

    <%= div_for @practice.marriage_act do %>
        <h2>Atto</h2>
        <%= f.simple_fields_for :marriage_act do |m| %>
            <%= m.input :number %>
            <%= m.input :year %>
            <%= m.input :registry %>
            <%= m.input :part %>
            <%= m.input :serie %>
            <%= m.input :marriage_date, as: :date_picker %>
        <% end %>
    <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                practices_path, :class => 'btn' %>
  </div>
<% end %>
