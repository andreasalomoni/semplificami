<%= simple_form_for @practice, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :practice_type %>
  <%= f.input :presentation_date %>
  <%= f.input :sentence_id %>
  <%= f.input :actor_id %>
  <%= f.input :defendant_id %>
  <%= f.input :magistrate_id %>
  <%= f.input :marriage_act_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                practices_path, :class => 'btn' %>
  </div>
<% end %>
