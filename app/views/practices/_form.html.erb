<%= simple_form_for @practice, remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :practice_type %>
  <%= f.input :presentation_date, as: :date_picker %>

    <div class="simple_fields">
        <h3>Sentenza</h3>
        <%= f.simple_fields_for :sentence do |s| %>
            <%= s.input :number, as: :string %>
            <%= s.input :year %>
            <%= s.input :sentence_date, as: :date_picker %>
            <%= s.input :publication_date, as: :date_picker %>
            <%= s.input :role_number %>
            <%= s.input :role_year %>
        <% end %>
    </div>

    <div class="simple_fields">
        <h3>Atto</h3>
        <%= f.simple_fields_for :marriage_act do |m| %>
            <%= m.input :number %>
            <%= m.input :year %>
            <%= m.input :registry %>
            <%= m.input :part %>
            <%= m.input :serie %>
            <%= m.input :marriage_date, as: :date_picker %>
        <% end %>
    </div>

    <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                practices_path, :class => 'btn' %>
  </div>
<% end %>
