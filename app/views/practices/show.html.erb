<%- model_class = Practice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:practice_type) %>:</strong></dt>
  <dd><%= @practice.practice_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:presentation_date) %>:</strong></dt>
  <dd><%= @practice.presentation_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sentence_id) %>:</strong></dt>
  <dd><%= @practice.sentence_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actor_id) %>:</strong></dt>
  <dd><%= @practice.actor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:defendant_id) %>:</strong></dt>
  <dd><%= @practice.defendant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:magistrate_id) %>:</strong></dt>
  <dd><%= @practice.magistrate_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marriage_act_id) %>:</strong></dt>
  <dd><%= @practice.marriage_act_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              practices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_practice_path(@practice), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              practice_path(@practice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
