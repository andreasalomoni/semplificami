<%- model_class = MarriageAct -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @marriage_act.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @marriage_act.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registry) %>:</strong></dt>
  <dd><%= @marriage_act.registry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:part) %>:</strong></dt>
  <dd><%= @marriage_act.part %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serie) %>:</strong></dt>
  <dd><%= @marriage_act.serie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marriage_date) %>:</strong></dt>
  <dd><%= @marriage_act.marriage_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              marriage_acts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_marriage_act_path(@marriage_act), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              marriage_act_path(@marriage_act),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
