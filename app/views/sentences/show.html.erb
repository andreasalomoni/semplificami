<%- model_class = Sentence -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @sentence.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @sentence.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sentence_date) %>:</strong></dt>
  <dd><%= @sentence.sentence_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publication_date) %>:</strong></dt>
  <dd><%= @sentence.publication_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_number) %>:</strong></dt>
  <dd><%= @sentence.role_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_year) %>:</strong></dt>
  <dd><%= @sentence.role_year %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sentences_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sentence_path(@sentence), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sentence_path(@sentence),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
